<!DOCTYPE html>
<html lang="en">
<head>
    {{>links}}
    <title>Document</title>
    {{>style}}
</head>
<body>
    <!-- navbar code -->
    {{>navbar}}

    <!-- main code -->
    <div class="container-fluid main_menu">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12 main_left">
                        <p>Welcome to weather app</p>
                        <h1>Get The Latest <span class="txt">Weather</span> Info Of Your City</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <div class="col-md-6 col-12 main_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="w-100" src="./image/img3.jpg" alt="First slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" src="./image/img2.jpg" alt="Second slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" src="./image/img3.jpg" alt="Third slide">
                              </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer code -->
    <footer>
        <p>Created By ‚ù§ Pradip Timbadiya</p>
    </footer>
</body>
</html>