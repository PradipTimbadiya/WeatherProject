<!DOCTYPE html>
<html lang="en">
<head>
    {{>links}}
    <title>Document</title>
    {{>style}}
</head>
<body>
    <!-- navbar code -->
    {{>navbar}}

    <!-- main code -->
    <div class="container-fluid main_menu">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto mt-5">
               <div class="main_content">
                    <form class="temp_form mt-5">
                        <input type="text" id="cityName" placeholder="Enter your city name">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
               </div>

               <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_val">0</span><sup>o</sup>C </p>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>

    <!-- footer code -->
    <footer>
        <p>Created By ‚ù§ Pradip Timbadiya</p>
    </footer>

    <script src="js/main.js"></script>
    <script>
        const day=document.getElementById('day')
        const today_data=document.getElementById('today_data');
        const getCurrentDay=()=>{
            var weekday = new Array(7);
            weekday[0] = "Sun";
            weekday[1] = "Mon";
            weekday[2] = "Tue";
            weekday[3] = "Wed";
            weekday[4] = "Thu";
            weekday[5] = "Fri";
            weekday[6] = "Sat";

            let currentDay=new Date();
            let day=weekday[currentDay.getDay()];
            return day;
        }
        const getCurrentTime=()=>{
          var months = [
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "June",
          "July",
          "Aug",
          "Sept",
          "Oct",
          "Nov",
          "Dec",
        ];

        let now=new Date();
        let month=months[now.getMonth()];
        let date=now.getDate();

        return `${month} ${date}`;
        }
    
        day.innerHTML=getCurrentDay();
        today_data.innerHTML=getCurrentTime();
    </script>
</body>
</html>